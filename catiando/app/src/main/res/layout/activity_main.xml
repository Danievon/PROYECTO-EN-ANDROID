<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ivonne_daniella.catiando.MainActivity"

    android:id="@+id/one"
    android:background="@drawable/autom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vertexto"
        android:id="@+id/textView"
        android:layout_marginTop="117dp"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:textSize="30sp"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:ellipsize="marquee"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColorHint="@color/abc_secondary_text_material_dark"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />
</RelativeLayout>
